<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    
    
    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/profile" 
        android:onClick="goToProfile"
        android:background="@drawable/custom_background"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/ivGallery"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/ivProfile"
        android:layout_alignTop="@+id/ivEmergencyContact"
        android:layout_marginTop="33dp"
        android:src="@drawable/gallery"
        android:onClick="goToGallery"
        android:background="@drawable/custom_background"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/ivAppointment"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/ivProfile"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/ivProfile"
        android:src="@drawable/emer2"
        android:onClick="goToEmergencyContact"
        android:background="@drawable/custom_background" 
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/ivVaccine"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/ivAppointment"
        android:layout_toLeftOf="@+id/ivAppointment"
        android:src="@drawable/injection_icon"
        android:onClick="goToVaccine"
        android:background="@drawable/custom_background"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/ivSettings"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/ivAppointment"
        android:layout_alignTop="@+id/ivEmergencyContact"
        android:src="@drawable/medical_center" 
        android:padding="5dp"
        android:onClick="goToSettings"
        android:background="@drawable/custom_background"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/ivDietChart"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/ivAppointment"
        android:layout_marginRight="19dp"
        android:layout_toLeftOf="@+id/ivProfile"
        android:src="@drawable/chart_icon"
        android:onClick="goToDietChart"
        android:background="@drawable/custom_background" 
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/ivEmergencyContact"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/ivDietChart"
        android:layout_below="@+id/ivProfile"
        android:background="@drawable/custom_background"
        android:contentDescription="@string/app_name"
        android:onClick="goToAppointment"
        android:src="@drawable/docctor" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivAppointment"
        android:layout_centerHorizontal="true"
        android:text="Vaccination" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivEmergencyContact"
        android:layout_centerHorizontal="true"
        android:text="Profile" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivEmergencyContact"
        android:layout_below="@+id/ivEmergencyContact"
        android:text="Doctor's Appointment"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView3"
        android:text="Gallery" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/ivDietChart"
        android:layout_marginLeft="14dp"
        android:text="Diet Chart" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/ivSettings"
        android:layout_alignRight="@+id/ivSettings"
        android:layout_alignTop="@+id/textView3"
        android:gravity="center"
        android:text="Medical Centers" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ivAppointment"
        android:layout_below="@+id/ivDietChart"
        android:layout_marginRight="14dp"
        android:text="Help Line" />

</RelativeLayout>
