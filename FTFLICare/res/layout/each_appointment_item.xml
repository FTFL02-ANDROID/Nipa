<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal" 
    android:background="#FFFFFF">
    
    <ImageView android:id="@+id/ivPrescription"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/prescription_icon"
        android:layout_marginLeft="10dp"
        android:contentDescription="@string/tvDoctorName"/>
    
    <LinearLayout android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">
        
        <TextView android:id="@+id/tvDoctorName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/tvDoctorName"
            android:textSize="15sp"
            android:textColor="#000066"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>
        
        <TextView android:id="@+id/tvAppointmentDate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/tvAppointmentDate"
            android:textSize="15sp"
            android:textColor="#000000"
            android:gravity="top"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    

</LinearLayout>
